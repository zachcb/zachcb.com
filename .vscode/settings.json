{
  "vetur.validation.template": false,

  "eslint.enable": true,
  
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ],

  "files.exclude": {
    "node_modules": true,
    ".npm-offline-cache": true
  },

  "emmet.includeLanguages": {
    "postcss": "css"
  },

  "emmet.syntaxProfiles": {
    "postcss": "css"
  },

  "files.associations": {
    "*.css": "postcss"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
}